{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information",
      "BookManagementApi": "Debug"
    }
  },

  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultConnection": "Data Source=bookmanagement.db"
  },

  "Jwt": {
    "Key": "aXb9kLmPqRsT2uVwXyZ1234567890AbCdEfGhIjKlMnOpQrStUvWxYz!@#2025SECURE",
    "Issuer": "BookManagementApi",
    "Audience": "BookManagementApiUsers",
    "TokenValidityInMinutes": 60,
    "RefreshTokenValidityInDays": 7
  },

  "ExternalServices": {
    "OpenLibrary": {
      "BaseUrl": "https://openlibrary.org/api/books",
      "TimeoutSeconds": 10
    },
    "IsbnValidation": {
      "Enabled": true,
      "SoapEndpoint": "http://webservices.daehosting.com/services/isbnservice.wso",
      "FallbackToAlgorithm": true
    }
  },

  "ApiSettings": {
    "DefaultPageSize": 10,
    "MaxPageSize": 100,
    "EnableMassiveUpload": true,
    "MaxCsvFileSizeMb": 10
  },

  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [ "FromLogContext", "WithMachineName", "WithThreadId" ],
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/log-.txt",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 31,
          "fileSizeLimitBytes": 104857600,
          "rollOnFileSizeLimit": true
        }
      }
    ]
  }
}